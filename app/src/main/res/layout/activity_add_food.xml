<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="match_parent"
                android:id="@+id/parent_add_product">

    <include layout="@layout/toolbar"
             android:id="@+id/toolbar"/>

    <ScrollView
            android:layout_below="@+id/toolbar"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">
        <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="fill_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/edit_profile_image_CL"
                    android:layout_width="120dp"
                    android:layout_gravity="center"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="5dp"
                    android:layout_marginTop="30dp">


                <com.quikliq.quikliquser.utilities.RoundRectCornerImageView
                        android:id="@+id/business_image_IV"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/food"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="h,1:0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                <ImageView
                        android:id="@+id/edit_profile_image_IV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/edit_camera"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <RelativeLayout
                    android:id="@+id/contactLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/edit_profile_image_CL">
                <RelativeLayout
                        android:background="@drawable/gray_background_rounded"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_food"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="10dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_gravity="center"
                                    android:id="@+id/input_layout_foodname"
                                    android:layout_width="fill_parent"
                                    android:layout_height="45dp">
                                <EditText
                                        android:textSize="14dp"
                                        android:textColor="#ff000000"
                                        android:textColorHint="#ff696969"
                                        android:id="@+id/foodName"
                                        android:background="@android:color/transparent"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_marginLeft="5dp"
                                        android:hint="ITEM NAME"
                                        android:inputType="text"
                                        android:imeOptions="actionNext"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <View
                                android:background="#ffd3d3d3"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_food"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="10dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_gravity="center"
                                    android:id="@+id/input_layout_category"
                                    android:layout_width="fill_parent"
                                    android:layout_height="45dp">
                                <EditText
                                        android:textSize="14dp"
                                        android:textColor="#ff000000"
                                        android:textColorHint="#ff696969"
                                        android:id="@+id/category"
                                        android:background="@android:color/transparent"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_marginLeft="5dp"
                                        android:hint="CATEGORY"
                                        android:inputType="text"
                                        android:imeOptions="actionNext"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <View
                                android:background="#ffd3d3d3"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_food"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="10dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_gravity="center"
                                    android:id="@+id/input_layout_description"
                                    android:layout_width="fill_parent"
                                    android:layout_height="45dp">
                                <EditText
                                        android:textSize="14dp"
                                        android:textColor="#ff000000"
                                        android:textColorHint="#ff696969"
                                        android:id="@+id/description"
                                        android:background="@android:color/transparent"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_marginLeft="5dp"
                                        android:hint="DESCRIPTION"
                                        android:inputType="text"
                                        android:imeOptions="actionNext"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <View
                                android:background="#ffd3d3d3"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp"
                        >

                            <ImageView
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_food"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="10dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_gravity="center"
                                    android:id="@+id/input_layout_price"
                                    android:layout_width="fill_parent"
                                    android:layout_height="45dp">
                                <EditText android:textSize="14dp"
                                          android:textColor="#ff000000"
                                          android:textColorHint="#ff696969"
                                          android:id="@+id/price"
                                          android:background="@android:color/transparent"
                                          android:layout_width="fill_parent"
                                          android:layout_height="fill_parent"
                                          android:layout_marginLeft="5dp"
                                          android:hint="PRICE"
                                          android:inputType="number"
                                          android:imeOptions="actionNext"/>

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>
                        <View
                                android:background="#ffd3d3d3"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"/>
                        <LinearLayout android:orientation="horizontal"
                                      android:layout_width="fill_parent"
                                      android:layout_height="60dp">
                            <ImageView android:layout_gravity="center"
                                       android:background="@drawable/ic_food"
                                       android:layout_width="25dp"
                                       android:layout_height="25dp"
                                       android:layout_margin="10dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_gravity="center"
                                    android:id="@+id/input_layout_quantity"
                                    android:layout_width="fill_parent"
                                    android:layout_height="45dp">
                                <EditText android:textSize="14dp"
                                          android:textColor="#ff000000"
                                          android:textColorHint="#ff696969"
                                          android:id="@+id/quantity"
                                          android:background="@android:color/transparent"
                                          android:layout_width="fill_parent"
                                          android:layout_height="fill_parent"
                                          android:layout_marginLeft="5dp"
                                          android:hint="QUANTITY"
                                          android:inputType="number"
                                          android:imeOptions="actionDone"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <Button
            android:textColor="#ffffffff"
            android:id="@+id/addFood_BT"
            android:background="@color/colorPrimary"
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/dimen_margin_20dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:text="Add food"/>
</RelativeLayout>
