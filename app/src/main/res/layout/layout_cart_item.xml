<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:padding="5dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hakka Noodles"
                    android:textSize="@dimen/text_14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_product_name"/>
            <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_product_name"
                    android:text="$4.50"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_12sp"/>


            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">
                <ImageView
                        android:id="@+id/tv_minus"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@mipmap/ic_minus"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 1 "
                        android:padding="5dp"
                        android:layout_toRightOf="@+id/tv_minus"
                        android:minWidth="@dimen/margin_20dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/tv_quantity"/>

                <ImageView
                        android:id="@+id/tv_plus"
                        android:layout_toRightOf="@+id/tv_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@mipmap/ic_plus"
                />

                <TextView
                        android:id="@+id/totalitem_price"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_plus"
                        android:text="$4.50"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textSize="@dimen/text_13sp"/>

            </RelativeLayout>

        </RelativeLayout>

    <View android:layout_width="match_parent"
          android:layout_height="@dimen/height_0.5dp"
          android:layout_marginLeft="@dimen/margin_15dp"
          android:layout_marginRight="@dimen/margin_15dp"
          android:background="@color/light_grey_bg"/>
    </LinearLayout>
