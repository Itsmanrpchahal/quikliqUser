<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_dialog_transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dim_10dp"
        android:background="@drawable/rounded_rectangle_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phonenumberTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10dp"
            android:layout_marginRight="@dimen/dim_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center"
            android:padding="@dimen/padding_5dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_14sp"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_0.5dp"
            android:background="@color/chip_background_selected" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/noTV"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_8dp"
                android:background="@drawable/textview_selecter"
                android:text="Cancel"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_14sp"
                />
            <View
                android:layout_width="@dimen/height_0.5dp"
                android:background="@color/chip_background_selected"
                android:layout_height="match_parent">

            </View>
            <TextView
                android:id="@+id/yesTV"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/textview_selecter"
                android:padding="@dimen/dimen_8dp"
                android:text="Delete"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_14sp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>