<?xml version='1.0' encoding='utf-8' ?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="fill_parent" android:layout_height="100dp"
                                    android:layout_margin="10dp" app:cardCornerRadius="20dp" app:cardElevation="10dp">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ImageView android:id="@+id/food_IV"
                   android:background="#ff000000"
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:layout_margin="15dp"
                   android:scaleType="fitXY"/>
        <LinearLayout android:gravity="center_vertical"
                      android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_toLeftOf="@+id/accept_BT"
                      android:layout_toRightOf="@+id/food_IV">
            <TextView android:textSize="13dp"
                      android:textStyle="bold"
                      android:textColor="@color/black"
                      android:id="@+id/shop_name_TV"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:text="from faverat stawbery"/>
            <TextView android:textSize="12dp"
                      android:textColor="@color/black"
                      android:id="@+id/category_TV"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:text="category"/>
            <TextView android:textSize="10dp"
                      android:textColor="@color/black"
                      android:id="@+id/time_TV"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:text="40-50 MIN"/>
        </LinearLayout>
        <Button android:textSize="10dp"
                android:textColor="#ffffffff"
                android:id="@+id/accept_BT"
                android:background="@drawable/accept_btn"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="Accept"
                android:layout_alignParentRight="true"
                android:textAllCaps="false"/>
        <Button android:textSize="10dp"
                android:textColor="#ffffffff"
                android:id="@+id/reject_BT"
                android:background="@drawable/btn_red_background"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Reject"
                android:layout_below="@+id/accept_BT"
                android:layout_alignParentRight="true"
                android:textAllCaps="false"/>
        <Button android:textSize="10dp"
                android:textColor="#ffffffff"
                android:id="@+id/deliver_BT"
                android:background="@drawable/accept_btn"
                android:visibility="gone"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Delivered"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textAllCaps="false"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
