<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/colorPrimary"
                android:layout_width="fill_parent"
                android:id="@+id/parent_signup"
                android:layout_height="fill_parent">

    <include layout="@layout/nointernet"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/screendata">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:id="@+id/logo"
                    android:background="@drawable/img_marijuana"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"/>
                <RelativeLayout
                    android:id="@+id/signUpLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/content_background"
                    android:layout_below="@+id/logo">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="70dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/ic_user"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_gravity="center"
                                android:id="@+id/input_layout_firstname"
                                android:layout_width="fill_parent"
                                android:layout_height="45dp">
                                <EditText
                                    android:textSize="14dp"
                                    android:textColor="#ff000000"
                                    android:textColorHint="#ff696969"
                                    android:id="@+id/firstName"
                                    android:background="@android:color/transparent"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="5dp"
                                    android:hint="FIRST NAME"
                                    android:inputType="text"
                                    android:imeOptions="actionNext"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <View
                            android:background="#ffd3d3d3"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="70dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/ic_user"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_gravity="center"
                                android:id="@+id/input_layout_lastname"
                                android:layout_width="fill_parent"
                                android:layout_height="45dp">
                                <EditText
                                    android:textSize="14dp"
                                    android:textColor="#ff000000"
                                    android:textColorHint="#ff696969"
                                    android:id="@+id/lastName"
                                    android:background="@android:color/transparent"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="5dp"
                                    android:hint="LAST NAME"
                                    android:inputType="text"
                                    android:imeOptions="actionNext"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <View
                            android:background="#ffd3d3d3"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="70dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/ic_mail"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_gravity="center"
                                android:id="@+id/input_layout_email"
                                android:layout_width="fill_parent"
                                android:layout_height="45dp">
                                <EditText
                                    android:textSize="14dp"
                                    android:textColor="#ff000000"
                                    android:textColorHint="#ff696969"
                                    android:id="@+id/registerEmail"
                                    android:background="@android:color/transparent"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="5dp"
                                    android:hint="EMAIL"
                                    android:inputType="textEmailAddress"
                                    android:imeOptions="actionNext"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <View
                            android:background="#ffd3d3d3"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="70dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/ic_mail"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_gravity="center"
                                android:id="@+id/input_layout_address"
                                android:layout_width="fill_parent"
                                android:layout_height="45dp">
                                <EditText
                                    android:textSize="14dp"
                                    android:textColor="#ff000000"
                                    android:textColorHint="#ff696969"
                                    android:id="@+id/address"
                                    android:background="@android:color/transparent"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="5dp"
                                    android:hint="ADDRESS"
                                    android:inputType="textEmailAddress"
                                    android:imeOptions="actionNext"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <View
                            android:background="#ffd3d3d3"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="70dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/ic_lock"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_gravity="center"
                                android:id="@+id/input_layout_password"
                                android:layout_width="fill_parent"
                                android:layout_height="45dp">
                                <EditText
                                    android:textSize="14dp"
                                    android:textColor="#ff000000"
                                    android:textColorHint="#ff696969"
                                    android:id="@+id/password_ET"
                                    android:background="@android:color/transparent"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="5dp"
                                    android:hint="PASSWORD"
                                    android:maxLength="15"
                                    android:inputType="textPassword"
                                    android:imeOptions="actionDone"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <View
                            android:background="#ffd3d3d3"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/nextScreen"
                    android:background="@drawable/send_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="-30dp"
                    android:layout_below="@+id/signUpLayout"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"/>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/signUpLayout">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="#ffffffff"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an Account?"/>
                    <RelativeLayout
                        android:id="@+id/signUp_RL"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp">
                        <TextView
                            android:textSize="16dp"
                            android:textColor="#ffffffff"
                            android:gravity="center"
                            android:id="@+id/signUp_TV"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text=" Sign in"/>
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>
