<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="130dp"
              android:background="@color/colorAccent"
              android:minWidth="400dp"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="30dp"
            android:background="@color/colorAccent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_margin_10dp"
                android:layout_marginTop="@dimen/dimen_margin_10dp"
                android:gravity="center"
                android:padding="@dimen/dim_10dp"
                android:text="Add Picture"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold"/>

        <ImageView
                android:id="@+id/cameraIV"
                android:layout_width="@dimen/size_50dp"
                android:layout_height="@dimen/size_50dp"
                android:layout_alignBottom="@+id/galleryIV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="@dimen/dimen_margin_20dp"
                android:layout_marginStart="90dp"
                app:srcCompat="@drawable/ic_camera_alt_black_24dp"/>

        <ImageView
                android:id="@+id/galleryIV"
                android:layout_width="@dimen/size_50dp"
                android:layout_height="@dimen/size_50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/heading"
                android:layout_gravity="right"
                android:layout_marginEnd="90dp"
                android:layout_marginLeft="@dimen/dimen_margin_20dp"
                android:layout_marginRight="90dp"
                app:srcCompat="@drawable/ic_insert_photo_black_24dp"/>

    </RelativeLayout>


</LinearLayout>
