        <activity
                android:name=".activities.RegisterActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity
                android:name=".activities.HomeActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity
                android:name=".imagePicker.TempActivity"
                android:screenOrientation="portrait"
